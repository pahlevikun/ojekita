    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.wensoft.ojeku.customlibrary.NonScrollListView
                android:id="@+id/listViewBannerMakanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dividerHeight="2dp"
                android:divider="@color/colorAccent"></com.wensoft.ojeku.customlibrary.NonScrollListView>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorAccent"/>
            <TextView
                android:id="@+id/tvGetRestaurants"
                android:background="@drawable/bg_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lihat Restoran Selengkapnya"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:padding="20dp"
                android:textSize="13sp"
                android:textAllCaps="true"
                android:clickable="true"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorAccent"/>
            <com.wensoft.ojeku.customlibrary.NonScrollGridView
                android:id="@+id/gridViewBannerKategori"
                android:numColumns="2"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:verticalSpacing="1dp"
                android:horizontalSpacing="1dp"
                android:stretchMode="columnWidth"></com.wensoft.ojeku.customlibrary.NonScrollGridView>
            <View
